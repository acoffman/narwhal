<form id = "ip_left">
<fieldset>
  <legend>Currently Blocked IPs</legend>
  <table>
    <col />
    <col />
    <tr class="ip">
      <td class="ip">
        <label for="option_list">IP Address</label>
        <%= select_tag("option_list",
        options_for_select(@list), 
        html_options = {"size" => 20, "multiple" => true }) %>
      </td>
      <td class="ip">
        <%= select_tag("proto_list",
        options_for_select(["UDP", "POP", "TCP", "DCHP", "DNS"]),
        html_options = {"size" => 15, "multiple" => true}) %>
        <%= submit_tag( "Remove" ) %>
      </td>
    </tr>
    <tr class="ip">
      <td class="ip">
        <%= submit_tag( "Delete IP" ) %>
      </td>
      <td class="ip">
        <%= select("option", "person_id", ['UDP','POP','TCP','SNMP','DHCP','DNS','NNTP','Telnet','SSH']) %>
        <%= submit_tag( "Add" ) %>
      </td>
    </tr>
  </div>
</table>
</fieldset>
</form>

<form id = "ip_right">
<fieldset width="25%">
  <legend>Add New IP</legend>

  <label>IP Address:</label>
  <%= text_field "ip", "ip", "size" => 20 %>
  <%= submit_tag( "Add" ) %>
</fieldset>
</form>
